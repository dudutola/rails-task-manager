<h1><%= @task.title %></h1>

<p class="bg-light p-3 border border-dark-subtle rounded"><%= @task.details %></p>

<div class="d-flex">
  <%= form_with model: @task, local: true do |f| %>
    <%= f.check_box :completed %>
    <%= f.submit "Update Task", style: "display:none" %>
  <% end %>

  <% if @task.completed %>
    <p class="px-2">This task is completed</p>
  <% else %>
    <p class="px-2">This task is not completed yet</p>
  <% end %>
</div>

<%= link_to "Edit this task", edit_task_path %> |
<%= link_to "Back to tasks", tasks_path %>
